{
    "scripts": {
        "serve": "webpack-dev-server",
        "build-debug": "cargo +nightly build --target wasm32-unknown-unknown && wasm-bindgen target/wasm32-unknown-unknown/debug/wordscapes.wasm --out-dir .",
        "build-release": "cargo +nightly build --release --target wasm32-unknown-unknown && wasm-bindgen target/wasm32-unknown-unknown/release/wordscapes.wasm --out-dir .",
        "bundle": "npm run build-release && webpack"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^4.5.2",
        "webpack": "^4.16.1",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.4"
    }
}
